.rss-item,.rss-remove,.rss-add {
    border: 3px;
    border-radius: 2px;
    min-height: 50px;
    margin-bottom: 1px;
    display: flex;
    align-items: center;
}

.rss-item {
    background: white;
    position: absolute;
    width: 100%;
    z-index: 2;
}

.rss-remove {
    background: #FF0000;
    position: relative;
    flex-direction: row-reverse;
    font-size: 18px;
    padding-right: 12px;
    color: white;
    z-index: 1;
}

.rss-add {
    background: white;
    display: flex;
    width: 0%;
}

.rss-image {
    margin-left: 8px;
    margin-right: 10px;
}

.rss-data {
    display: flex;
    flex-direction: column;
}

