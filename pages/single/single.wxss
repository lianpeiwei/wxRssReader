@import "../../__wuBaseWxss__/0.wxss";

@import "../../wxParse/wxParse.wxss";

page {
    height: 100%;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

page {
    display: block;
}

.swiper-container {
    height: 100%;
}

.swiper-item-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-content: center;
    padding-top: 10px;
}

.chapter {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: white;
    width: 100%;
    height: 100%;
}

.chapter-line {
    padding-bottom: 5px;
}

.scroll-container {
    width: 650rpx;
    height: 90%;
    padding-top: 5px;
    padding-left: 10px;
    padding-right: 10px;
}

.footbar {
    width: 0%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.scroll-info {
    color: #737373;
    font-size: 13px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 0 50px 30px #ffffff inset;
    border: 10px ridge #F4E9E0;
}

.-ui-title {
    display: flex;
    flex-direction: column;
    align-items: left;
    font-weight: bold;
    color : #0f2d31;
    font-size: 15px;
}

.-ui-subtitle {
    line-height: 200%;
    color : #184f57;
    font-size: 14px;
}